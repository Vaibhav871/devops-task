version: '3.8'

services:
  frontend:
    image: vaibhav871/frontend:1049d98
    ports:
      - "80:80"
    depends_on:
      - backend
    environment:
      - REACT_APP_API_URL=http://localhost:5000 # Ensure frontend connects to the backend

  backend:
    image: vaibhav871/backend:1049d98
    ports:
      - "5000:5000"
    environment:
      - APP_NAME=backend
      - PORT=5000
      - MONGO_URI=mongodb://mongo_db:27017/sampleApp # Updated service name for MongoDB
    depends_on:
      - mongo_db

  mongo_db:
    image: mongo:latest
    container_name: mongodb
    ports:
      - "27017:27017"
    volumes:
      - mongo_db:/data/db

volumes:
  mongo_db: {}
